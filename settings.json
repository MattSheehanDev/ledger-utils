// Place your settings in this file to overwrite the default settings
{
// Editor
    "editor.fontFamily": "Consolas",
    "editor.fontSize": 13,
    
    "editor.lineHeight": 19,
    "editor.roundedSelection": false,
    "editor.cursorBlinking": "solid",
        
    "editor.lineNumbers": "on",
    "editor.detectIndentation": false,
// Workbench
    "workbench.sideBar.location": "right",
// Window
    "window.reopenFolders": "none",
// File Explorer
    "explorer.workingFiles.maxVisible": 9,
// CSS
    "css.lint.universalSelector": "error",
    "css.lint.important": "error",
// Less
    "less.lint.universalSelector": "error",
    "less.lint.important": "error",
// HTML
    "html.format.indentInnerHtml": true,
// Integrated Terminal
    "terminal.integrated.cursorBlinking": false,
// Telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
// vs-code-spotify configuration
    "spotify.showNextButton": false,
    "spotify.showPreviousButton": false,
    "spotify.showMuteVolumeButton": false,
    "spotify.showUnmuteVolumeButton": false,
    "spotify.showMuteUnmuteVolumeButton": false,
    "window.zoomLevel": 0
}
